@page
@model BattleShips.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Game.Player1Id" class="control-label"></label>
                <select asp-for="Game.Player1Id" class ="form-control" asp-items="ViewBag.Player1Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Game.Player2Id" class="control-label"></label>
                <select asp-for="Game.Player2Id" class ="form-control" asp-items="ViewBag.Player2Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Game.GameState" class="control-label"></label>
                <select asp-for="Game.GameState" class="form-control"></select>
                <span asp-validation-for="Game.GameState" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Game.Player1OnTurn" /> @Html.DisplayNameFor(model => model.Game.Player1OnTurn)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
